{
  "name": "Visual Markup",
  "author": "jsrath",
  "short_name": "Visual Markup",
  "description": "See your HTML/CSS visually",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "disabled16.png",
      "128": "disabled128.png"
    },
    "default_title": "See your HTML/CSS visually"
  },
  "homepage_url": "http://www.jsrath.com",
  "icons": {
    "16": "enabled16.png",
    "128": "enabled128.png"
  },
  "manifest_version": 2
}

